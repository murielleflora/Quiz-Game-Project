@model IEnumerable<quiz.Models.Option>

@{
    ViewData["Title"] = "Index";
}
<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active"><a asp-controller="Admin" asp-action="AdminPanel" style="color: inherit; text-decoration: none;">Admin Panel</a></li>
        <li class="breadcrumb-item active">Option</li>
    </ol>
    <h1>Index</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OptionText)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OptionIsCorrect)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.OptionText)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.OptionIsCorrect)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.OptionId">Edit</a> |
                        <a asp-action="Details" asp-route-id="@item.OptionId">Details</a> |
                        <a asp-action="Delete" asp-route-id="@item.OptionId">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
